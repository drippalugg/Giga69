<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.giga67.controller.OrdersController"
            styleClass="root">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-top">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <Button text="Назад" onAction="#goBack" styleClass="back-button"/>
            <Label text="Заказы" styleClass="page-title"/>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="20" styleClass="cart-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!--  StackPane для центрирования сообщения -->
            <StackPane VBox.vgrow="ALWAYS">
                <!-- ListView для заказов -->
                <ListView fx:id="ordersListView"
                          styleClass="cart-list"
                          style="-fx-background-color: transparent;"/>

                <!-- Центрированное сообщение о пустых заказах -->
                <Label fx:id="emptyLabel"
                       text="Заказов нет"
                       styleClass="empty-message"
                       visible="false"
                       StackPane.alignment="CENTER"/>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
