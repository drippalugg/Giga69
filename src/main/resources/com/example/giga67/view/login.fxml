<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.giga67.controller.LoginController"
            styleClass="root">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-top">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="30" alignment="CENTER" styleClass="login-container">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Логотип -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="MasterParts" styleClass="login-logo"/>
                <Label text="Авторизуйтесь для продолжения" styleClass="login-subtitle"/>
            </VBox>

            <!-- Форма входа -->
            <VBox spacing="20"
                  maxWidth="400"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 4);">

                <!-- Email -->
                <VBox spacing="8">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField"
                               promptText="example@mail.com"
                               styleClass="form-input"/>
                </VBox>

                <!-- Пароль -->
                <VBox spacing="8">
                    <Label text="Пароль" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="••••••••"
                                   styleClass="form-input"/>
                </VBox>

                <!-- Имя (для регистрации) -->
                <VBox fx:id="registerBox" spacing="8" visible="false" managed="false">
                    <Label text="Имя" styleClass="form-label"/>
                    <TextField fx:id="nameField"
                               promptText="Ваше имя"
                               styleClass="form-input"/>
                </VBox>

                <!-- Запомнить меня -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox fx:id="rememberMeCheckBox" text="Запомнить меня"/>
                </HBox>



                <!-- Ошибка -->
                <Label fx:id="errorLabel"
                       text=""
                       styleClass="error-label"
                       visible="false"
                       wrapText="true"/>

                <!-- Кнопка входа -->
                <Button fx:id="loginButton"
                        text="Войти"
                        onAction="#handleLogin"
                        styleClass="primary-button-large"
                        defaultButton="true"/>

                <!-- Кнопка регистрации (скрыта по умолчанию) -->
                <Button fx:id="registerButton"
                        text="Зарегистрироваться"
                        onAction="#handleRegister"
                        styleClass="primary-button-large"
                        visible="false"
                        managed="false"/>

                <!-- Переключение режима -->
                <HBox spacing="5" alignment="CENTER">
                    <Label fx:id="toggleLabel"
                           text="Нет аккаунта?"
                           style="-fx-text-fill: #666; -fx-font-size: 14px;"/>

                    <Button text="Зарегистрируйтесь"
                            onAction="#toggleMode"
                            styleClass="link-button"/>
                </HBox>

                <!-- Гостевой вход -->
                <Button text="Продолжить как гость"
                        onAction="#guestContinue"
                        styleClass="secondary-button"
                        maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
