<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.giga67.controller.ProfileController"
            styleClass="root">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-top">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <Button text="Назад"
                    onAction="#goBack"
                    styleClass="back-button"/>

            <Label text="Профиль"
                   styleClass="page-title"/>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="30" alignment="CENTER" styleClass="profile-container">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Заголовок -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Профиль пользователя"
                       style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Label text="Управление вашими данными"
                       style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
            </VBox>

            <VBox spacing="20"
                  maxWidth="370"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 4);">

                <!-- Имя -->
                <VBox spacing="8">
                    <Label text="Имя" styleClass="form-label"/>
                    <TextField fx:id="nameField"
                               promptText="Ваше имя"
                               styleClass="form-input"/>
                </VBox>

                <!-- Email  -->
                <VBox spacing="8">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField"
                               styleClass="form-input"
                               editable="false"
                               style="-fx-opacity: 0.7; -fx-background-color: #F5F5F5;"/>
                </VBox>

                <!-- Сообщение об успехе/ошибке -->
                <Label fx:id="messageLabel"
                       text=""
                       visible="false"
                       wrapText="true"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <!-- Кнопка сохранения -->
                <Button text="Сохранить изменения"
                        onAction="#handleSave"
                        styleClass="primary-button-large"
                        maxWidth="Infinity"/>
                
                <!-- Выход -->
                <Button text="Выйти из аккаунта"
                        onAction="#handleLogout"
                        styleClass="danger-button"
                        maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
